<h3><%= I18n.t "devise.invitations.new.header" %></h3>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: {method: :post}) do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <% if can? :manage, User %>
      <div>
        <%= check_box_tag(:inviter) %>
        <%= label_tag(:inviter, "Check to grant inviter priviledges to this user") %>
      </div>
    <% end %>
  <div>
    <%= f.submit I18n.t('devise.invitations.new.submit_button'), class: 'button small' %>
  </div>
<% end %>
