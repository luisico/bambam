<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <div class="row">
        <div class="small-4 medium-2 columns">
          <%= image_tag avatar_url(@user, 100), id: "hexdigest-#{Digest::MD5.hexdigest(@user.email.downcase)}" %>
        </div>
        <div class="small-8 medium-8 columns left">
          <h3><%= @user.email %></h3>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <% if @user == current_user %>
      <%= link_to 'Edit', edit_user_registration_path, class: 'button tiny radius' %>
    <% end %>
    <%= link_to 'Back', users_path, class: 'button tiny radius' %>
  </div>
</div>
