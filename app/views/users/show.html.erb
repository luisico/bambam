<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <div class="row">
        <div class="small-4 medium-2 columns">
          <%= image_tag avatar_url(@user, 100) %>
        </div>
        <div class="small-8 medium-8 columns left">
          <h3 class="text-panel-overhang"><%= @user.email %></h3>
        </div>
      </div>
      <hr/>

      <div class="row">
        <div class="small-12 medium-6 columns">
          <h4>Groups</h4>
          <ul class="no-bullet">
            <% @user.groups.each do |group| %>
              <li id="group_<%= group.id %>">
                <%= link_to group.name, group %> owned by <%= group.owner.email %>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="small-12 medium-6 columns">
          <h4>Projects</h4>
          <ul class="no-bullet">
            <% @user.projects.each do |project| %>
              <li id="project_<%= project.id %>">
                <%= link_to project.name, project %> owned by <%= project.owner.email %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <% if @user == current_user %>
      <%= link_to 'Edit', edit_user_registration_path, class: 'button tiny radius' %>
    <% end %>
    <%= link_to 'Back', users_path, class: 'button tiny radius' %>
  </div>
</div>
