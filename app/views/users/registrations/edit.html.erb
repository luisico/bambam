<div class="row">
  <div class="small-9 small-centered columns">
    <div class="panel">
      <h3>Update account</h3>

      <div>
        <%= image_tag avatar_url(@user, 100) %>
        <label><i>(upload an image <a href="https://en.gravatar.com/">here</a> using email below to customize your avatar)</i></label>
      </div><br>

      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f| %>
        <div>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
        </div>

        <div>
          <label><i>(leave next two fields blank if you don't want to change your password)</i></label>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
        </div>

        <div>
          <%= f.password_field :password_confirmation, placeholder: "Password confirmation" %>
        </div>

        <div>
          <label><i>(we need your current password to confirm your changes)</i></label>
          <%= f.password_field :current_password, placeholder: 'Current password' %>
        </div>

        <div>
          <%= f.submit "Update", class: 'button tiny radius' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
