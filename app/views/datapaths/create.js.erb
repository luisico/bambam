$('.new_datapath').remove();
<% if @datapath.errors.any? %>
  $('#new-datapath').append('<%= j render("form") %>');
  DatapathUsers.applySelect2();
<% else %>
  $('#datapath-list').append('<%= j render(@datapath) %>');
  <% @datapath = Datapath.new %>
  $('#new-datapath').append('<%= j render("form") %>');
  DatapathUsers.applySelect2();
  $('#no-datapaths').remove();
<% end %>
