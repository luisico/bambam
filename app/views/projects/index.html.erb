<div class="row">
  <div class="small-12 medium-8 medium-centered columns">
    <% if can? :manage, Project %>
      <%= link_to 'New Project', new_project_path, class: "button tiny radius" %>
    <% end %>
    <div class="panel">
      <h3>Projects</h3>
      <table>
        <tr>
          <th class="text-left normal-font-weight">Name</th>
          <th class="text-left normal-font-weight">Tracks</th>
          <th class="text-left normal-font-weight">Owner</th>
        </tr>

      <% @projects.each do |project| %>
        <tr id="project_<%= project.id %>">
          <td><%= link_to project.name, project %></td>
          <td class="text-center"><%= project.tracks.count %></td>
          <td><%= link_to project.owner.email, project.owner %></td>
          </td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
