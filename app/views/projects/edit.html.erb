<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <% if can? :manage, @project %>
        <h2>Edit project</h2>
      <% else %>
        <h2>Edit <%= @project.name %> tracks</h2>
      <% end %>

      <%= render 'form' %>

      <%= link_to @project, class: 'button tiny radius' do %>
        <i class="fi-x-circle large margin-right"></i>Cancel
      <% end %>
    </div>
  </div>
</div>
