<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <div class="clearfix">
        <h3 class="left"><%= @project.name %></h3>
        <h4 class="right">
          <small>
            <span class="created-at"><i class="fi-calendar medium margin-right" title="created"></i>
              <%= local_time_ago(@project.created_at) %>
            </span><br/>
            <span class="updated-at"><i class="fi-clock medium margin-right" title="updated"></i>
              <%= local_time_ago(@project.updated_at) %>
            </span>
          </small>
        </h4>
      </div>

      <div class="row">
        <div class="small-12 medium-6 columns">
          <h4><i class="fi-torsos large margin-rigth"></i>Users</h4>
          <%= render @project.users %>
        </div>
        <div class="small-12 medium-6 columns">
          <h4><i class="fi-paw large margin-right"></i>Tracks
            <small>view all your <%= link_to 'tracks', tracks_path %></small>
          </h4>
          <ul class="no-bullet">
            <%= render @project.tracks %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <% if can? :edit, @project %>
      <%= link_to edit_project_path(@project), class: 'button tiny radius' do %>
        <i class="fi-pencil margin-right"></i>Edit
      <% end %>
    <% end %>
    <%= link_to :back, class: 'button tiny radius' do %>
      <i class="fi-arrow-left margin-right"></i>Back
    <% end %>
    <% if can? :manage, @project %>
      <%= link_to @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button tiny radius [secondary alert success] right' do %>
        <i class="fi-trash margin-right"></i>Delete
      <% end %>
    <% end %>
  </div>
</div>
