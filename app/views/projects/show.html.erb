<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <div class="clearfix">
        <h3 class="left"><%= @project.name %></h3>
        <h4 class="right">
          <small>
            <span class="created-at"><i class="fi-upload-cloud medium margin-right" title="created"></i>
              <%= local_time_ago(@project.created_at) %>
            </span><br/>
            <span class="updated-at"><i class="fi-clock medium margin-right" title="updated"></i>
              <%= local_time_ago(@project.updated_at) %>
            </span>
          </small>
        </h4>
      </div>

      <div class="row">
        <div class="small-12 medium-6 columns">
          <h4><i class="fi-torsos large margin-rigth"></i>Users</h4>
            <% @project.users.each do |user| %>
            <p id="project-user-<%= user.id %>">
              <% if can? :manage, User %>
                <%= link_to user do %>
                  <%= image_tag avatar_url(user) %>
                  <%= user.email %>
                <% end %>
              <% else %>
                <%= image_tag avatar_url(user) %>
                <%= user.email %>
              <% end %>
            </p>
            <% end %>
        </div>
        <div class="small-12 medium-6 columns">
          <h4><i class="fi-paw large margin-right"></i>Tracks
            <small>view tracks from all your projects <%= link_to 'here', tracks_path %></small>
          </h4>
          <ul class="no-bullet">
            <%= render @project.tracks %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <% if can? :edit, @project %>
      <%= link_to 'Edit', edit_project_path(@project), class: 'button tiny radius' %>
    <% end %>
    <%= link_to 'Back', :back, class: 'button tiny radius' %>
    <% if can? :manage, @project %>
      <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button tiny radius [secondary alert success] right' %>
    <% end %>
  </div>
</div>
