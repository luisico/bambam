<div class="hide" data-tour="tour_project_show"></div>
<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <div class="clearfix">
        <h3 class="left" id="project-name">
          <%= @project.name %>
        </h3>
        <h4 class="right">
          <small id="project-timestamps">
            <span class="created-at"><i class="fi-calendar medium margin-right" title="created"></i>
              <%= local_time_ago(@project.created_at) %>
            </span><br/>
            <span class="updated-at"><i class="fi-clock medium margin-right" title="updated"></i>
              <%= local_time_ago(@project.updated_at) %>
            </span>
          </small>
        </h4>
      </div>

      <div class="row">
        <div class="small-12 medium-6 columns">
          <h4><i class="fi-torsos large margin-right" id="project-users"></i>Users</h4>
          <%= render @project.users %>
        </div>
        <div class="small-12 medium-6 columns">
          <h4 id="project-tracks"><i class="fi-paw large margin-right"></i>Tracks
            <small>view all your <%= link_to 'tracks', tracks_path, id: "all-user-tracks" %></small>
          </h4>
          <ul class="no-bullet" id="project-tracks-list">
            <%= render @project.tracks %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <% if can? :manage, @project %>
      <%= link_to 'Edit', edit_project_path(@project), class: 'button tiny radius' %>
    <% elsif can? :edit, @project %>
      <%= link_to 'Add or edit tracks', edit_project_path(@project), class: 'button tiny radius' %>
    <% end %>
    <%= link_to 'Back', :back, class: 'button tiny radius' %>
    <% if can? :manage, @project %>
      <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure? Clicking this button will delete this project and all its associated tracks' }, class: 'button tiny radius [secondary alert success] right', id: "delete-project" %>
    <% end %>
  </div>
</div>
