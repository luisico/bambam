<% if @share_link.errors.any? %>
  $('#edit_share_link_<%= @share_link.id %>').remove();
  $('#share_link_<%= @share_link.id %>').append('<%= j render("form") %>');
  $('#share_link_expires_at').datepicker({ dateFormat: 'dd-mm-yy' })
<% else %>
  $('#share-links').html("<%= escape_javascript(render(:partial => @share_link.track.share_links)) %>");
<% end %>
