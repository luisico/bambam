<% if @share_link.errors.any? %>
  $('#edit_share_link_<%= @share_link.id %>').remove();
  ShareLink.showForm('<%= j render("form") %>', <%= @share_link.id %>);
<% else %>
  $('#share_link_<%= @share_link.id %>').replaceWith('<%= j render(@share_link) %>');
  $('#share_link_<%= @share_link.id %>').effect("highlight", {}, 1500);
  $('#share-links-list').children().find('i.copy-to-clipboard').bind("click", function(){
    copy_to_clipboard(this);
  });
<% end %>
