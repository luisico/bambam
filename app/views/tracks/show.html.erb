<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <div class="clearfix">
        <h3 class="left">
          <%= @track.name %>
          <small>
            <% if @track.project %>
              (<%= link_to @track.project.name, @track.project %>)
            <% end %>
          </small>
        </h3>
        <h4 class="right">
          <small>
            <span class="created-at"><i class="fi-calendar medium margin-right" title="created"></i>
              <%= local_time_ago(@track.created_at) %>
            </span><br/>
            <span class="updated-at"><i class="fi-clock medium margin-right" title="updated"></i>
              <%= local_time_ago(@track.updated_at) %>
            </span>
          </small>
        </h4>
      </div>

      <div>
        <ul class="inline-list">
          <li><%= link_to_igv(@track, 'Open in IGV') %></li>
          <% if Pathname.new(@track.path).extname == ".bam" %>
            <li><%= link_to "download bam file", stream_services_track_path(@track), class: 'fi-download' %></li>
            <li><%= link_to "download bai file", stream_services_track_path(@track, format: 'bai'), class: 'fi-download' %></li>
            <% elsif Pathname.new(@track.path).extname == ".bw" %>
            <li><%= link_to "download bw file", stream_services_track_path(@track), class: 'fi-download' %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <h5>Server path</h5>
        <p class="clipboard-box">
          <i class="fi-clipboard copy-to-clipboard pointer" data-clipboard-id="clip_track_path"></i>
          <span id="clip_track_path"><%= @track.path %></span>
        </p>
      </div>

      <div class="share-track">
        <h5>Track share links</h5>
        <p><%= link_to 'Create new track share link', '#', class: "share-track-link" %></p>

        <%= form_tag share_track_path(@track), :method => :patch, class: "share-track-form", remote: true do %>
          <fieldset>
            <div class="row">
              <div class="large-4 columns">
                <div class="row collapse">
                  <div class="small-3 large-2 columns">
                    <span class="prefix"><i class="fi-calendar large"></i></span>
                  </div>
                  <div class="small-9 large-10 columns">
                    <%= text_field_tag :expires_at, nil, placeholder: "Choose expiration date" %>
                  </div>
                </div>
              </div>

              <div class="large-6 columns">
                <%= text_field_tag :notes, nil, placeholder: "Enter notes here" %>
              </div>

              <div class="large-2 columns">
                <%= submit_tag "Create", class: 'button tiny radius share-track-submit' %>
              </div>
            </div>
          </fieldset>
        <% end %>



        <div id="share-links">
          <% if @track.share_links.any? %>
            <%= render @track.share_links %>
          <% else %>
            <p>There are no track line links for this track</p>
          <% end %>
        </div>
      </div>
    </div>

    <%= link_to 'Back', :back, class: 'button tiny radius' %>
  </div>
</div>
