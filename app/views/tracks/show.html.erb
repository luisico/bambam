<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <h3><%= @track.name %></h3>
      <h5><small> created <%= local_time_ago(@track.created_at) %>, updated <%= local_time_ago(@track.updated_at) %></small></h5>
      <h5>Path:</h5>
      <ul class="inline-list">
        <li><i class="fi-clipboard copy-to-clipboard" data-clipboard-id="track_path"></i></li>
        <li id="track_path"><%= @track.path %></li>
        <li><%= link_to_igv(@track, 'Open in IGV') %></li>
      </ul>
      <h5>UCSC track line:</h5>
      <ul class="inline-list">
        <li><i class="fi-clipboard copy-to-clipboard" data-clipboard-id="track_ucsc_line"></i></li>
        <li><span id="track_ucsc_line"><%= ucsc_track_line(@track) %></span></li>
      </ul>
    </div>

    <%= link_to 'Edit', edit_track_path(@track), class: 'button tiny radius' %>
    <%= link_to 'Back', tracks_path, class: 'button tiny radius' %>
    <%= link_to 'Delete', @track, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button tiny radius [secondary alert success] right' %>
  </div>
</div>
