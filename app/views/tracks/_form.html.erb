<%= form_for(@track) do |f| %>
  <% if @track.errors.any? %>
    <div class="field">
      <p style="color:#FF3333">Please check the highlighted <%= "error".pluralize(@track.errors.count) %> below:</p>
    </div>
  <% end %>

  <div class="field">
    <label>Enter the name of the track here. This should be short, as it will be used as the title of the track in IGV or the UCSC browser</label>
    <%= f.text_field :name, size: 60, placeholder: 'Track name' %>
  </div>

  <div class="field">
    <label>Enter the full path to the track. This must begin with:
      <ul class="no-bullet allowed-track-paths">
        <% ENV['ALLOWED_TRACK_PATHS'].split(':').each do |path| %>
          <li><%= path %></li>
        <% end %>
      </ul>
    </label>
    <%= f.text_field :path, size: 160, placeholder: 'Full path to track' %>
  </div>

  <div class="field">
    <label>Assign track to a project</label>
    <%= f.select :project_id,  Project.all.collect {|p| [p.name, p.id]}, {:include_blank => true, :default => nil} %>
  </div>

  <div class="actions">
    <%= f.submit class: 'button tiny radius' %>
  </div>
<% end %>
