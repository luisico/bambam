<% excerpt_text = @q || track.path[(track.path.length/2).round] %>
<li>
  <ul>
    <li><%= link_to_igv(track) %></li>
    <li>
      <%= link_to track.name, track %><span class="label genome"><%= track.genome %></span>
    </li>
    <li class="subdue pointer">
      <i class="truncated" title=<%= track.path %> data-long=<%= track.path %> data-short=<%= excerpt(track.path, excerpt_text, radius: 5) %> data-truncated=true>
        <%= excerpt(track.path, excerpt_text, radius: 5) %>
      </i>
    </li>
    <li class="owner-icon icon-key">
      <%= can?(:show, track.owner) ? link_to(track.owner.handle, track.owner) : track.owner.handle %>
    </li>
    <li class="subdue fi-clock icon-key" title="updated">
      <%= local_time_ago(track.updated_at) %>
    </li>
  </ul>
</li>
