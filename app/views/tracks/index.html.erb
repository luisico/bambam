<div class="row">
  <div class="small-12 large-6 large-centered columns">
    <h1>Tracks</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tracks.each do |track| %>
          <tr>
            <td><b><%= track.name %></b></td>
            <td><%= link_to 'Show', track %></td>
            <td><%= link_to 'Edit', edit_track_path(track) %></td>
            <td><%= link_to 'Delete', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Track', new_track_path, class: "button tiny radius" %>
  </div>
</div>
