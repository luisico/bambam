<div class="row">
  <div class="small-12 medium-10 medium-centered columns">
    <div class="panel">
      <h3 class="track-icon icon-key">Tracks by project</h3>
      <% if @tracks.any? %>
        <ul class="no-bullet" id="tracks-by-projects">
          <li>
            <a class="button tiny show-all">Show all</a>
            <a class="button tiny hide-all">Hide all</a>
          </li>
          <% @tracks.group_by{|track| track.project}.each do |project, track_array| %>
            <li class="tracks-project open"><i class="icon-folder"></i>
              <span class="track-icon icon-key"><%= project.tracks.count%></span>
              <%= link_to project.name, project_path(project) %>
              <span class="owner-icon icon-key"><%= project.owner.handle %></span>
            </li>
            <ul class="track-list">
              <%= render track_array %>
            </ul>
          <% end %>
        </ul>
      <% else %>
        <h5>You either have no projects or no tracks.</h5>
        <p>If you belong to a project, you can add tracks to the project edit page.</p>
        <p>If you don't belong to a project, please contact your administrator</p>
      <% end %>
    </div>
  </div>
</div>
